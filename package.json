{
	"name": "projectsyeah",
	"displayName": "Projects",
	"description": "Add a project dashboard to VSCode",
	"repository": "https://github.com/bobmagicii/vscode-dashboard",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "projectsyeah.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "Dashboard",
			"properties": {
				"projectsyeah.debug": {
					"type": "boolean",
					"default": false,
					"description": "Enable debugging output."
				},
				"projectsyeah.showPaths": {
					"type": "boolean",
					"default": true,
					"description": "Show paths on the project entries."
				},
				"projectsyeah.openOnNewWindow": {
					"type": "boolean",
					"default": true,
					"description": "Auto open the dashboard when spawning new windows."
				},
				"projectsyeah.title": {
					"type": "string",
					"default": "Projects",
					"description": "Dashboard Title"
				},
				"projectsyeah.folderSizing": {
					"type": "string",
					"default": "col-12",
					"description": "The Bootstrap CSS classes used to adjust how the folders scale to your window size."
				},
				"projectsyeah.columnSizing": {
					"type": "string",
					"default": "col-12 col-md-6",
					"description": "The Bootstrap CSS classes used to adjust how the columns scale to your window size."
				},
				"projectsyeah.database": {
					"type": "array",
					"default": [],
					"description": "List of projects stored in your user config so that it can be synced."
				}
			}
		},
		"views": {
			"projectsyeah-dashboard-sidebar": [
				{
					"id": "projectsyeah-dashboard-sidebar",
					"type": "webview",
					"name": "Projects",
					"icon": "local/gfx/icon.svg",
					"visibility": "visible"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "projectsyeah-dashboard-sidebar",
					"title": "Projects",
					"icon": "local/gfx/icon.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"@types/uuid": "^8.3.3",
		"@vscode/codicons": "^0.0.26",
		"uuid": "^8.3.2"
	}
}
